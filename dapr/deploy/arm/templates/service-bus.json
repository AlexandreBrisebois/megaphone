{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
             "defaultValue": "[resourceGroup().location]"
        }, 
        "prefix": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "servicebus-namespace-name": "[concat(parameters('prefix'),'-service-bus')]"
    },
    "resources": [
      {
            "type": "Microsoft.ServiceBus/namespaces",
            "apiVersion": "2018-01-01-preview",
            "name": "[variables('servicebus-namespace-name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard",
                "tier": "Standard"
            },
            "properties": {
                "zoneRedundant": false
            }
        },
        {
            "type": "Microsoft.ServiceBus/namespaces/AuthorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('servicebus-namespace-name'), '/DarpManageSharedAccessKey')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ServiceBus/namespaces', variables('servicebus-namespace-name'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            }
        }
    ],
    "outputs": {
        "serviceBusNamespacePrimaryConnectionString": {
            "type": "string",
            "value": "[listKeys(resourceId(concat('Microsoft.ServiceBus/namespaces/AuthorizationRules'),variables('servicebus-namespace-name'),'DarpManageSharedAccessKey'),'2017-04-01').primaryConnectionString]"
        }
    }
}