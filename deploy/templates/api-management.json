{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
             "defaultValue": "[resourceGroup().location]"
        },
        "prefix": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Consumption",
                "Developer",
                "Standard",
                "Premium"
            ],
            "defaultValue": "Consumption",
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "skuCount": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "The instance size of this API Management service."
            }
        },
        "instrumentationKey": {
            "type": "string"
        },
        "backend-service-url": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "apim-name": "[concat(parameters('prefix'),'-apim')]",
        "api-name": "[concat(parameters('prefix'), '-api-v1')]",
        "logger-name" : "[concat(variables('apim-name'), '-ai')]"
    },
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service",
            "apiVersion": "2019-12-01",
            "name": "[variables('apim-name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]",
                "capacity": "[parameters('skuCount')]"
            },
            "properties": {
                "publisherEmail": "albriseb@microsoft.com",
                "publisherName": "Microsoft",
                "notificationSenderEmail": "apimgmt-noreply@mail.windowsazure.com",
                "hostnameConfigurations": [
                    {
                        "type": "Proxy",
                        "hostName": "[concat(variables('apim-name'), '.azure-api.net')]",
                        "negotiateClientCertificate": false,
                        "defaultSslBinding": true
                    }
                ],
                "customProperties": {
                    "Microsoft.WindowsAzure.ApiManagement.Gateway.Security.Protocols.Tls10": "False",
                    "Microsoft.WindowsAzure.ApiManagement.Gateway.Security.Protocols.Tls11": "False",
                    "Microsoft.WindowsAzure.ApiManagement.Gateway.Security.Backend.Protocols.Tls10": "False",
                    "Microsoft.WindowsAzure.ApiManagement.Gateway.Security.Backend.Protocols.Tls11": "False",
                    "Microsoft.WindowsAzure.ApiManagement.Gateway.Security.Backend.Protocols.Ssl30": "False",
                    "Microsoft.WindowsAzure.ApiManagement.Gateway.Protocols.Server.Http2": "False"
                },
                "virtualNetworkType": "None",
                "apiVersionConstraint": {}
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/loggers",
            "apiVersion": "2019-12-01",
            "name": "[concat(variables('apim-name'), '/',variables('logger-name'))]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]"
            ],
            "properties": {
                "loggerType": "applicationInsights",
                "credentials": {
                    "instrumentationKey": "{{Logger-Credentials}}"
                },
                "isBuffered": true,
                "resourceId": "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/namedValues",
            "apiVersion": "2019-12-01",
            "name": "[concat(variables('apim-name'), '/', 'Logger-Credentials')]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]"
            ],
            "properties": {
                "displayName": "Logger-Credentials",
                "secret": true,
                "value": "[parameters('instrumentationKey')]"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/policies",
            "apiVersion": "2019-12-01",
            "name": "[concat(variables('apim-name'), '/policy')]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]"
            ],
            "properties": {
                "value": "https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy/templates/api-management/apim-base-policies.xml",
                "format": "rawxml-link"
            }
        },
        {
            "name": "[concat(variables('apim-name'),'-product-deployment')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup" : "[resourceGroup().name]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]",
                "[concat('Microsoft.Resources/deployments/', concat(variables('apim-name'),'-api-deployment'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy', '/templates/api-management/megaphone-api-product.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "apim-prefix" :  {"value": "[parameters('prefix')]"},
                    "apim-service-name" :  {"value": "[variables('apim-name')]"},
                    "api-name" :  {"value": "[variables('api-name')]"}
                }
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/apiVersionSets",
            "apiVersion": "2019-12-01",
            "name": "[concat(variables('apim-name'), '/megaphone-api-version-set')]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]"
            ],
            "properties": {
                "displayName": "Megaphone API",
                "versioningScheme": "Header",
                "versionHeaderName": "Api-Version"
            }
        },
        {
            "name": "[concat(variables('apim-name'),'-api-deployment')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup" : "[resourceGroup().name]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service', variables('apim-name'))]",
                "[resourceId('Microsoft.ApiManagement/service/api-version-sets', variables('apim-name'),'megaphone-api-version-set')]",
                "[resourceId('Microsoft.ApiManagement/service/loggers', variables('apim-name'), concat(variables('apim-name'), '-ai'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy', '/templates/api-management/megaphone-api.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "api-name" :  {"value": "[variables('api-name')]"},
                    "apim-service-name" :  {"value": "[variables('apim-name')]"},
                    "backend-service-url" : {"value": "[parameters('backend-service-url')]"},
                    "logger-name" : {"value": "[variables('logger-name')]"},
                    "api-version-set-id" : { "value": "[resourceId('Microsoft.ApiManagement/service/api-version-sets', variables('apim-name'),'megaphone-api-version-set')]"}
                }
            }
        }
    ],
    "outputs": {}
}