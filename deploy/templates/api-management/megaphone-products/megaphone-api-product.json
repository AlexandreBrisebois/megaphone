{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apim-prefix": {
            "type": "string"
        },
        "apim-service-name": {
            "type": "string"
        },
        "api-name": {
            "type": "string"
        },
        "repo-url": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "product-name" : "[concat(parameters('apim-prefix'), '-product')]"
    },
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service/products",
            "apiVersion": "2019-12-01",
            "name": "[concat(parameters('apim-service-name'), '/', variables('product-name'))]",
            "dependsOn": [],
            "properties": {
                "displayName": "Megaphone APIs",
                "description": "Get access to curated official Microsoft news, announcements, updates and blogs.",
                "terms": "",
                "subscriptionRequired": true,
                "approvalRequired": false,
                "subscriptionsLimit": 1,
                "state": "published"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/products/policies",
            "apiVersion": "2019-12-01",
            "name": "[concat(parameters('apim-service-name'),'/', parameters('api-name'),'/policy')]",
            "dependsOn": [
                  "[resourceId('Microsoft.ApiManagement/service/products',parameters('apim-service-name'), variables('product-name'))]"
            ],
            "properties": {
                "value": "[concat(parameters('repo-url'),'/templates/api-management/megaphone-products/megaphone-api-product-policy.xml')]",
                "format": "rawxml-link"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/products/apis",
            "apiVersion": "2019-12-01",
            "name": "[concat(parameters('apim-service-name'), '/', variables('product-name'), '/', parameters('api-name'))]",
            "properties": {},     
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service/products',parameters('apim-service-name'), variables('product-name'))]"
            ]      
        }
    ],
    "outputs": {}
}