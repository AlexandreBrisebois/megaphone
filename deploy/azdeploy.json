{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        }, 
        "prefix": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "rg-name": "[concat(parameters('prefix'), '-rg')]",
        "app-insights-deployment-name" :"[concat(parameters('prefix'),'-application-insights-deployment')]",
        "keyvault-deployment-name" :"[concat(parameters('prefix'),'-keyvault-deployment')]",
        "storage-deployment-name" :"[concat(parameters('prefix'),'-storage-deployment')]",
        "servicebus-deployment-name" :"[concat(parameters('prefix'),'-servicebus-deployment')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('location')]",
            "name": "[variables('rg-name')]",
            "properties": {}
        },
        {
            "name": "[variables('app-insights-deployment-name')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup" : "[variables('rg-name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rg-name'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy', '/templates/application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location" :  {"value": "[parameters('location')]"},
                    "prefix" :  {"value": "[parameters('prefix')]"}
                }
            }
        },
        {
            "name": "[variables('keyvault-deployment-name')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup" : "[variables('rg-name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rg-name'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy', '/templates/azure-keyvault.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location" :  {"value": "[parameters('location')]"},
                    "prefix" :  {"value": "[parameters('prefix')]"}
                }
            }
        },
        {
            "name": "[variables('storage-deployment-name')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup" : "[variables('rg-name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rg-name'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy', '/templates/azure-storage.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location" :  {"value": "[parameters('location')]"},
                    "prefix" :  {"value": "[parameters('prefix')]"}
                }
            }
        },
        {
            "name": "[variables('servicebus-deployment-name')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup" : "[variables('rg-name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rg-name'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/AlexandreBrisebois/megaphone/master/deploy', '/templates/azure-servicebus.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location" :  {"value": "[parameters('location')]"},
                    "prefix" :  {"value": "[parameters('prefix')]"}
                }
            }
        }
    ],
    "outputs": {
        "instrumentationKey": {
            "type": "string",
            "value":"[reference(variables('app-insights-deployment-name')).outputs.instrumentationKey.value]"
        },
        "storageAccountName": {
            "type": "string",
            "value":"[reference(variables('storage-deployment-name')).outputs.storageAccountName.value]"
        },
        "storageAccountPrimaryKey": {
            "type": "string",
            "value":"[reference(variables('storage-deployment-name')).outputs.storageAccountPrimaryKey.value]"
        },
        "serviceBusNamespacePrimaryConnectionString": {
            "type": "string",
            "value":"[reference(variables('servicebus-deployment-name')).outputs.serviceBusNamespacePrimaryConnectionString.value]"
        }
    }
}