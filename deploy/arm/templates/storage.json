{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
             "defaultValue": "[resourceGroup().location]"
        }, 
        "prefix": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "storage-name": "[concat(parameters('prefix'),'storageaccount')]",
        "storage-apiVersion": "[providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]]"
    },
    "resources": [
        {
            "name": "[variables('storage-name')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "tags": {
                "displayName": "[concat(parameters('prefix'),' Storage Account')]"
            },
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "accessTier": "Hot"
            }
        }
    ],
    "outputs": {
        "storageAccountName": {
            "type": "string",
            "value": "[variables('storage-name')]"
        },
        "storageAccountPrimaryKey": {
            "type": "string",
            "value": "[listKeys(variables('storage-name'),variables('storage-apiVersion')).keys[0].value]"
        }
    }
}