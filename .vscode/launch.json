    "version": "0.2.0",
    "configurations": [               
        {
            "name": "Debug Crawler",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Crawler Build",
            "program": "${workspaceFolder}/src/Crawler/Crawler.API/bin/Debug/netcoreapp3.1/Crawler.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Crawler/Crawler.API/",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://127.0.0.1:5100;",
                "DAPR_HTTP_PORT": "5180",
                "DAPR_GRPC_PORT": "5101"
            }
        },
        {
            "name": "Debug List",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "List Build",
            "program": "${workspaceFolder}/src/List/List.API/bin/Debug/netcoreapp3.1/List.API.dll",
            "args": [],
