    // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
    "version": "0.2.0",
    "configurations": [               
        {
            "name": "Debug Crawler",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Crawler Build",
            "program": "${workspaceFolder}/src/Crawler/Crawler.API/bin/Debug/netcoreapp3.1/Crawler.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Crawler/Crawler.API/",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://*:5100",
                "DAPR_HTTP_PORT": "5180",
                "DAPR_GRPC_PORT": "5101"
            }
        },
        {
            "name": "Debug Feeds",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Feeds Build",
            "program": "${workspaceFolder}/src/Feeds/Feeds.API/bin/Debug/netcoreapp3.1/Feeds.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Feeds/Feeds.API/",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://*:5200;",
                "DAPR_HTTP_PORT": "5280",
                "DAPR_GRPC_PORT": "5201"
            }
        },
        {
            "name": "Debug Resources",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Resources Build",
            "program": "${workspaceFolder}/src/Resources/Resource.Actor/bin/Debug/netcoreapp3.1/Resource.Actor.dll",
