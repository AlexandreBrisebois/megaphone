                "DAPR_GRPC_PORT": "5301"
            }
        },
        {
            "name": "Debug API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "API Build",
            "program": "${workspaceFolder}/src/API/Megaphone.API/bin/Debug/netcoreapp3.1/Megaphone.API.dll",
            "args": [],
